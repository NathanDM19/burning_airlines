<div class="container">
  <div class="row test">
    <div class="col" id="titleContainer">
      Name
    </div>
    <div class="col">
      Rows
    </div>
    <div class="col">
      Columns
    </div>
    <div class="col">
      <button type="button" class="btn btn-success tooLow"><%= link_to "Create Plane", new_airplane_path, class:"button" %></button>
    </div>
    <div class="col">
    </div>
  </div>
</div>

<div class="container">
  <% @airplanes.each do |airplane| %>
  <div class="row test">
    <div class="col">
      <p><%=link_to airplane.name, airplane_path(airplane) %></p>
    </div>
    <div class="col">
      <p> <%=airplane.rows %></p>
    </div>
    <div class="col">
      <p> <%=airplane.columns %></p>
    </div>
    <div class="col">
              <button type="button" class="btn btn-info tooLow"><%=link_to "Edit Flight", edit_airplane_path(airplane.id), class:"button" %></button>
    </div>
    <div class="col">
      <button type="button" class="btn btn-danger tooLow"><%= link_to "Delete Airplane", airplane_path(airplane), class:"button", method: :delete %></button>
    </div>
  </div>
  <% end %>
</div>
