<h1>Virgin Airlines</h1>
<!-- <button><%= link_to "Create Plane", new_airplane_path %></button> -->
<div>
  <div>Welcome, <%= @user.name %>!</div>
  <div><%= link_to "Log out", login_path, method: :delete, class: "btn btn-danger"%></div>
</div>

<br>

<div class="container">
  <div class="row test">
    <div class="col" id="titleContainer">
      Name
    </div>
    <div class="col">
      Rows
    </div>
    <div class="col">
      Columns
    </div>
    <% if @user.present? && @user.isAdmin?%>
      <div class="col">
        <button type="button" class="btn btn-success tooLow"><%= link_to "Create Plane", new_airplane_path, class:"button" %></button>
      </div>
      <div class="col">
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <% @airplanes.each do |airplane| %>
  <div class="row test">
    <div class="col">
      <p><%=link_to airplane.name, airplane_path(airplane) %></p>
    </div>
    <div class="col">
      <p> <%=airplane.rows %></p>
    </div>
    <div class="col">
      <p> <%=airplane.columns %></p>
    </div>
    <% if @user.present? && @user.isAdmin?%>
      <div class="col">
                <button type="button" class="btn btn-info tooLow"><%=link_to "Edit Flight", edit_airplane_path(airplane.id), class:"button" %></button>
      </div>
      <div class="col">
        <button type="button" class="btn btn-danger tooLow"><%= link_to "Delete Airplane", airplane_path(airplane), class:"button", method: :delete %></button>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
