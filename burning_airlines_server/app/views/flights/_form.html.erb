<%= form_for(@flight) do |f| %>
<%= f.label :date %>
<%= f.text_field :date %>
<br>
<%= f.label :from_airport %>
<%= f.text_field :from_airport %>
<br>
<%= f.label :to_airport %>
<%= f.text_field :to_airport %>
<br>
<%= f.label :airplane_id %>
 <%= f.select :airplane_id,
      options_for_select(['Select a airplane'] +@airplanes.pluck(:name, :id))
  %>

<br>
<%= link_to "Cancel", flights_path %>
<%= f.submit %>
<% end %>